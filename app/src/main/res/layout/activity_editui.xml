<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/d_10dp">


            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="10dp"
                android:hint="Title"
                android:textColor="@color/c_textcolor"
                />
            <EditText
                android:id="@+id/et_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="10dp"
                android:hint="Place"
                android:textColor="@color/c_textcolor"
                />

            <EditText
                android:id="@+id/et_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_marginTop="20dp"
                android:padding="18dp"
                android:textSize="17sp"
                android:hint="Details"
                android:textColor="@color/c_textcolor"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/no_button"
                android:padding="8dp"
                android:gravity="center"
                android:text="DATE"
                android:layout_margin="@dimen/d_10dp"
                android:textColor="@color/c_white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_latlong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Latitude Longitude"
                    android:textColor="@color/c_textcolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_showmap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@color/no_button"
                    android:padding="8dp"
                    android:drawableRight="@android:drawable/ic_menu_mapmode"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:gravity="center"
                    android:text="MAP"
                    android:textColor="@color/c_white"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/d_15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_showimage"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:layout_weight="2.2"
                    android:layout_gravity="center"
                    android:background="@color/no_button"
                    android:gravity="center"
                    android:drawableRight="@android:drawable/ic_menu_camera"
                    android:padding="8dp"
                    android:text="CLICK IMAGE"
                    android:textColor="@color/c_white"
                    android:textSize="17sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/no_button"
                android:gravity="center"
                android:padding="8dp"
                android:text="SHARE"
                android:layout_margin="@dimen/d_10dp"
                android:textColor="@color/c_white"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/no_button"
                android:gravity="center"
                android:padding="8dp"
                android:text="SAVE"
                android:textColor="@color/c_white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="17sp" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>